
public class SubArray {

	public static void main(String[] args) {
		int arr[]= {2,4,6,8,10};
		
		for(int i=0;i<arr.length;i++)
		{
			for(int j=0;j<=i;j++)
			{
				System.out.print(arr[j]+" ");
			}
			System.out.println();
		}
		System.out.println();
		for(int i=1;i<arr.length;i++)
		{
			for(int j=1;j<=i;j++)
		{
				System.out.print(arr[j]+" ");
			}
			System.out.println();
		}
		
	}

}
